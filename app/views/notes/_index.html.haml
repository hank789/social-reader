.wall-page
  %ul.notes
  .note-form-holder
    = form_for @note, remote: true, html: { multipart: true, id: nil, action: "/-1/notes", class: "new_note wall-note-form" }, authenticity_token: true do |f|
      = note_target_fields
      .note_text_and_preview
        = f.text_area :note, size: 255, class: 'note_text js-note-text js-gfm-input turn-on'
      .note-form-actions
        .buttons
          = f.submit 'Add Comment', class: "btn comment-btn btn-grouped js-comment-button"
          .hint.pull-left CTRL + Enter to send message
      .clearfix
