.project-edit-container
  .project-edit-errors
    = render 'services/errors'
  .project-edit-content
    = form_for @service, url: service_path, html: { class: 'form-horizontal' } do |f|
      .row
        .col-md-12
          %h3.page-title
            = image_tag image_path("services/rss.png"), class: "avatar s32"
            = @rss_category.name
          %hr
            - if @rss_category.select_type == 1
              = render "rss_select", f: f, select_feed: @service.nickname, rss_child_categories: @rss_child_categories
            - else
              = render "rss_feedlist", f: f, rss_child_categories: @rss_child_categories, rss_category: @rss_category
          %hr
          = render "priority_level", f: f, priority_level: @service.priority, can_change_priority_level: true
          %hr

          .form-actions
            = f.submit 'Save service', class: "btn btn-create project-submit", tabindex: 4
            - if @service.id
              = link_to "Disconnect #{@rss_category.name}", service_path(@service), class: "btn btn-remove", :data => { :confirm => "Disconnect #{@service.provider}?" }, :method => :delete