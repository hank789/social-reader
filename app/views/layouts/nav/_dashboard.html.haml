%ul
  = nav_link(path: 'dashboard#show', html_options: {class: 'home'}) do
    = link_to root_path, title: "Unread", class: 'has_bottom_tooltip', 'data-original-title' => 'Unread' do
      %i.icon-anchor
      %span.count= current_user.events.where(action: Event::UNREAD).count
  = nav_link(path: 'dashboard#stars', html_options: {class: 'home'}) do
    = link_to dashboard_stars_path, title: "Star", class: 'has_bottom_tooltip', 'data-original-title' => 'Star' do
      %i.icon-star
  = nav_link(path: 'dashboard#archive', html_options: {class: 'home'}) do
    = link_to dashboard_archive_path, title: "Archive", class: 'has_bottom_tooltip', 'data-original-title' => 'Archive' do
      %i.icon-archive
  = nav_link(path: 'dashboard#analytics', html_options: {class: 'home'}) do
    = link_to dashboard_analytics_path, title: "Analytics", class: 'has_bottom_tooltip', 'data-original-title' => 'Analytics' do
      %i.icon-bar-chart