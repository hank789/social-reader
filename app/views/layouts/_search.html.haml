.search
  = form_tag search_path, method: :get, class: 'navbar-form pull-left' do |f|
    = text_field_tag "search", nil, placeholder: search_placeholder, class: "search-input"
    = hidden_field_tag :post_id, @post.try(:id)
    = submit_tag 'Go' if ENV['RAILS_ENV'] == 'test'
    .search-autocomplete-opts.hide{:'data-autocomplete-path' => search_autocomplete_path, :'data-autocomplete-post-id' => @post.try(:id) }
